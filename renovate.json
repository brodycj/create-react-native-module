{
  "extends": [
    "config:base"
  ],
  "commitMessageExtra": "-> {{#if isMajor}}{{{newMajor}}}{{else}}{{#if isSingleVersion}}{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}{{/if}} - {{prettyDepType}}",
  "commitMessageTopic": "{{depName}}",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "enabled": false
    }
  ]
}
